<Page x:Class="EazySave_Master.View.ViewMainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EazySave_Master.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewMainWindow">

    <Grid>

        <Button x:Name="createSaveButton" Content="Create Save" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Height="78" Width="336" Click="Button_Click_CreateSave"/>
        <Button x:Name="runSaveButton" Content="Run Save" HorizontalAlignment="Center" Margin="0,240,0,0" VerticalAlignment="Top" Height="78" Width="336" Click="Button_Click_RunSave"/>
        <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Left" Margin="35,370,0,0" VerticalAlignment="Top" Height="30" Width="69" Click="Settings_Click"/>
        <Label x:Name="eazySaveLabel" Content="EazySave" HorizontalAlignment="Center" Margin="0,25,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>

    </Grid>
</Page>
