<Page x:Class="EazySave_Master.View.RunSave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EazySave_Master.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunSave">

    <Grid>
        <ListBox x:Name="listBoxSauvegardes" HorizontalAlignment="Left" VerticalAlignment="Top" Height="450" Width="800">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected}" Content="{Binding NomSauvegarde}" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="RunSaveButton" Content="Run Save" Margin="342,364,342,46" Click="Button_Click_Run"/>
        
        <Button x:Name="Back" Content="Back" Click="Back_Click" Margin="39,16,717,415" RenderTransformOrigin="0.525,0.505" />
    </Grid>
</Page>
